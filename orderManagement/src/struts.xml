<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name ="text"  namespace="/mystruts" extends="struts-default">
		<action name="viewAllUsers" class="actionPackage.CustomerViewAction" >
			<result name="success">/customerManage.jsp</result>
		</action>
		<action name="registerUser" class="actionPackage.CustomerRegisterAction" >
			<result name="success">/customerAddResult.jsp</result>
		</action>
		<action name="updateUser" class="actionPackage.CustomerAddAction" >
			<result name="success">/customerUpdate.jsp</result>
		</action>
		<action name="updateResult" class="actionPackage.CustomerUpdateAction" >
			<result name="success">/customerUpdateResult.jsp</result>
		</action>
		<action name="deleteUsers" class="actionPackage.CustomerDeleteAction" >
			<result name="success">/customerDeleteResult.jsp</result>
		</action>
	</package>
</struts>
